<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:id="@+id/itemtk_hinhanh"
            android:src="@drawable/baseline_account_circle_24"
            app:tint="@color/techsic" />
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemtk_email"
                    android:hint="Email"
                    android:textColor="#121212"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:maxLines="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemtk_trangthai"
                    android:hint="trạng thái"
                    android:textColor="#121212"
                    android:gravity="end"
                    android:textSize="16dp"
                    android:maxLines="1"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ tên"
                android:id="@+id/itemtk_hoten"
                android:layout_gravity="center"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:id="@+id/itemtk_sodt"
                android:layout_gravity="center"
                android:textSize="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnChat"
                    android:text="Nhắn tin"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:padding="2dp"
                    android:textSize="15sp"
                    android:background="@drawable/border_cardview2"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnChan"
                    android:layout_marginStart="5dp"
                    android:text="Chặn"
                    android:textAllCaps="false"
                    android:padding="2dp"
                    android:textSize="15sp"
                    android:background="@drawable/border_cardview"/>
            </LinearLayout>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>