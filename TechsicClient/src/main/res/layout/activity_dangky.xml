<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DangkyActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBarDangKy"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

            <TableRow
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/logoapp"
                    android:backgroundTint="#FF8800" />
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Đăng ký"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#f5f5f5"
                app:hintEnabled="true"
                android:hint="Email">
                <EditText
                    android:id="@+id/edtEmail"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="10dp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"   />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#f5f5f5"
                app:hintEnabled="true"
                android:hint="Họ tên">
                <EditText
                    android:id="@+id/edtHoTen"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="10dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"  />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="Ngày sinh"
                app:boxStrokeColor="#f5f5f5">
                <EditText
                    android:id="@+id/edtNgaySinh"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="10dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#f5f5f5"
                app:hintEnabled="true"
                android:hint="Địa chỉ">
                <EditText
                    android:id="@+id/edtDiaChi"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="10dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"   />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#f5f5f5"
                app:hintEnabled="true"
                android:hint="Số điện thoại">
                <EditText
                    android:id="@+id/edtSoDT"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="10dp"
                    android:inputType="phone|numberDecimal"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"   />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#f5f5f5"
                app:hintEnabled="true"
                android:hint="Mật khẩu">
                <EditText
                    android:id="@+id/edtMatKhau"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="10dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"   />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#f5f5f5"
                app:hintEnabled="true"
                android:hint="Nhập lại mật khẩu">
                <EditText
                    android:id="@+id/edtConMatKhau"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="10dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"   />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:background="#FF8800"
                android:elevation="10dp"
                android:text="Đăng ký"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản?"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtDangNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Đăng nhập"
                android:textColor="#FF8800"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarDangKy"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>