<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconnew"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="20dp"
                android:src="@drawable/iconnew"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintStart_toStartOf="parent"
               >

                <ImageView
                    android:id="@+id/itemsp_hinhanh"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="10dp"
                    android:src="@drawable/baseline_image_24" />

                <TextView
                    android:id="@+id/itemsp_tensp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|bottom"
                    android:lines="2"
                    android:layout_marginEnd="10dp"
                    android:hint="Tên sp"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/itemsp_thuonghieu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="Thương hiệu"
                        android:background="@drawable/corner_button2"
                        android:textSize="12dp"
                        android:textAllCaps="true" />
                    <TextView
                        android:id="@+id/itemsp_phanloai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:hint="Phân loại loại"
                        android:background="@drawable/corner_button2"
                        android:textSize="12dp"
                        android:textAllCaps="true" />
                </TableRow>

                <TextView
                    android:id="@+id/itemsp_giasp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:hint="Giá"
                    android:textColor="#FF8800"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>